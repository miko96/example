@using AdressList.Models
@model AdressNote

@{
    ViewBag.Title = "Add Note";
}
 <div id="editor" class="section panel panel-primary">
    <div class="panel-heading">
        Add
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Peson Name</label>
                @Html.TextBoxFor(m => m.PersonName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Adress</label>
                @Html.TextBoxFor(m => m.Adress, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        }
    </div>
 </div>
