@using AdressList.Models

@model IEnumerable<AdressNote>
@{
    ViewBag.Title = "Adress List";
}
    <div id="summary" class="section panel panel-primary">
        <div class="panel-heading">Adress List</div>
        <div class="panel-body">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Adress</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.PersonName</td>
                            <td>@item.Adress</td>
                            <td>
                                @Html.ActionLink("Update", "Update",
                                new { id = item.Id },
                                new { @class = "btn btn-xs btn-primary" })
                            </td>
                            <td>
                                @Html.ActionLink("Remove", "Remove",
                                new { id = item.Id },
                                new { @class = "btn btn-xs btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div>
        @Html.ActionLink("Add", "Add", "Home",
               new { @class = "btn btn-primary", @style = "margin-left: 20px" })
    </div>
