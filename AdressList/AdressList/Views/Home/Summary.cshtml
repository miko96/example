@using AdressList.Models;
@model IEnumerable<AdressNote>

<div class="panel-heading">Adress List</div>
<div class="panel-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Adress</th>
            <th></th>
            <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.PersonName</td>
                    <td>@item.Adress</td>
                    <td>
                        @Html.ActionLink("Update", "ds",
                                new { id = item.Id },
                                new { @class = "btn btn-xs btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Remove", "Remove",
                                new { id = item.Id },
                                new { @class = "btn btn-xs btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Add Adress", "Add")
</div>